{
  "manifest_version": 2,

  "name": "Parent/Child Managment for Trello",
  "short_name": "Parent/Child for Trello",
  "description": "Add support of Parent/Child dependencies in Trello projects.",
  "author": "Handsome",
  "version": "0.6.8",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "css": [
        "content/css/style.css"
      ],
      "js": [
        "content/scripts/libs/jquery.js",
        "content/scripts/libs/jquery-ui.js",
        "content/scripts/config.js",
        "content/scripts/api.js",
        "content/scripts/plugins/inheritance.js",
        "content/scripts/init.js"
      ]
    }
  ]
}
